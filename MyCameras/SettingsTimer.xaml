<Page
    x:Class="MyCameras.SettingsTimer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyCameras"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Loaded="Page_Loaded">
    <Grid Margin="5,5,5,5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock HorizontalAlignment="Center" x:Uid="uiSettingsTimerTitle" FontSize="18" Text="Timer settings" Margin="0,0,0,20"/>

        <ScrollViewer Grid.Row="1">
            <StackPanel >
                <Button Content="Save!" HorizontalAlignment="Center" Margin="0,15,0,0" Click="uiOk_Click"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
