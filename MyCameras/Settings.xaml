<Page
    x:Class="MyCameras.Settings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyCameras"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Loaded="Page_Loaded">

    <StackPanel Margin="5,5,5,5">
        <TextBlock HorizontalAlignment="Center" x:Uid="uiSettingsTitle" FontSize="18" Text="Settings" />
        <TextBlock FontSize="10" HorizontalAlignment="Center" Text="." x:Name="uiVersion" Margin="0,5,0,20"/>

        <Button Content="Global" Click="uiGoSettGlobal_Click" HorizontalAlignment="Center" Margin="0,0,0,10" x:Uid="uiSettingsGoGlobal" />
        <Button Content="Clock" Click="uiGoSettClock_Click" HorizontalAlignment="Center" Margin="0,0,0,10"  x:Uid="uiSettingsGoClock"/>
        <Button Content="Timer" Click="uiGoSettTimer_Click" HorizontalAlignment="Center" Margin="0,0,0,10"  x:Uid="uiSettingsGoTimer"/>
        <Button Content="Portal" Click="uiGoSettPortal_Click" HorizontalAlignment="Center" Margin="0,0,0,10"  x:Uid="uiSettingsGoPortal"/>
    </StackPanel>
</Page>
